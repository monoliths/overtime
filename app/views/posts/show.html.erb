<div>
  <h2><%= @post.rationale %></h2>
</div>
<div class="well">
  <div>
    <h3><span>Overtime amount requested: </span>
      <%= @post.overtime_request %></h3>
  </div>

  <div>
    <h3><span>Date: </span>
      <%= @post.date %></h3>
  </div>

  <div>
    <h3><span>Current stage of approval: </span>
      <%= @post.status.capitalize %></h3>
  </div>

  <div>
    <h3><span>Person: </span>
      <%= @post.user.full_name %></h3>
  </div>
</div>


<%= link_to 'Edit', edit_post_path(@post), id: "edit_#{@post.id}", class: 'btn btn-lg btn-primary' if policy(@post).update? %>
